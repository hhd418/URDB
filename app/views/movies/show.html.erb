
<div class="links">
	
	<% if @movie.id != @first.id %>
		<button><%= link_to 'First', movie_url(@first.movie) %></button>
	<% end %>

	<% if @movie.id != @first.id %>
		<% previous_movie_id = @movie.id - 1 %>
		<% previous_movie = Movie.find(previous_movie_id) %>
		<% previous_movie = previous_movie.movie %>
		<button><%= link_to 'Previous', movie_url(previous_movie) %></button>
	<% end %>

	<button><%= link_to 'Home', movies_url %></button>

	<% if @movie.id != @last.id %>
		<% next_movie_id = @movie.id + 1 %>
		<% next_movie = Movie.find(next_movie_id) %>
		<% next_movie = next_movie.movie %>
		<button><%= link_to 'Next', movie_url(next_movie) %></button>
	<% end %>

	<% if @movie.id != @last.id %>
		<button><%= link_to 'Last', movie_url(@last.movie) %></button>
	<% end %>
	
</div>

<h1><%= @movie.title %></h1>

<h3><%= @movie.description %> </h3>

<img src = <%= @movie.gif %> />

<h3>Trailer:</h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%=@movie.trailer_id%>" frameborder="0" allowfullscreen></iframe>


